<UserControl 
    x:Class="LitmusTests.Tests.ScrollViewerTest"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:LitmusTests.Controls">
    <Grid>
        <ScrollViewer Width="300" Height="300">
            <controls:PanelMonitor Width="600" Height="480">
                <controls:PanelMonitor.Background>
                    <LinearGradientBrush>
                        <GradientStop Offset="0" Color="Red" />
                        <GradientStop Offset="0.2" Color="Orange" />
                        <GradientStop Offset="0.4" Color="Yellow" />
                        <GradientStop Offset="0.6" Color="Green" />
                        <GradientStop Offset="0.8" Color="Blue" />
                        <GradientStop Offset="1.0" Color="Violet" />
                    </LinearGradientBrush>
                </controls:PanelMonitor.Background>
            </controls:PanelMonitor>
            <!--
            <Image Width="600" Height="480" Stretch="UniformToFill" Source="/LitmusTests;component/testing.jpg" />
            -->
        </ScrollViewer>
    </Grid>
</UserControl>
