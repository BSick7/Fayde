<UserControl x:Class="WickedSick.LitmusTests.Tests.Layout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid x:Name="LayoutRoot" Background="Green">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border BorderBrush="Navy" Background="White" BorderThickness="1" CornerRadius="5" Margin="0,0,50,50" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Border BorderBrush="Red" Background="Orange" BorderThickness="8" CornerRadius="15" Margin="5, 10, 15, 20">
                <Border BorderBrush="Black" Background="White" BorderThickness="3" CornerRadius="5, 5, 20, 20" Margin="20">
                    <TextBlock Margin="10">
                        <TextBlock.Inlines>
                            <Run FontWeight="Bold" FontSize="14" Text="Hi! I am a TextBlock. " />
                            <Run FontStyle="Italic" Foreground="Red" Text="This is red italic text. " />
                            <LineBreak />
                            <Underline Foreground="Blue">
                                <Run Text="How about adding some blue?" />
                            </Underline>
                        </TextBlock.Inlines>
                    </TextBlock>
                </Border>
            </Border>
        </Border>
        <Border Grid.Column="1" Width="100" Height="100" BorderBrush="Black" BorderThickness="2"/>
        <Border Grid.Column="2" Width="100" Height="100" BorderBrush="Black" BorderThickness="4"/>
        <Border Grid.Row="1" Grid.Column="1" BorderBrush="Navy" Background="White" BorderThickness="1" CornerRadius="5" Margin="0,0,50,100">
            <Border BorderBrush="Red" Background="Orange" BorderThickness="8" CornerRadius="15" Margin="5, 10, 15, 20">
                <Border BorderBrush="Black" Background="White" BorderThickness="3" CornerRadius="5, 5, 20, 20" Margin="20">
                    <Image Margin="10" Source="/WickedSick.LitmusTests;component/testing.jpg"/>
                </Border>
            </Border>
        </Border>
        <Image Grid.Row="2" Grid.Column="1" Source="/WickedSick.LitmusTests;component/testing.jpg"/>
    </Grid>
</UserControl>
