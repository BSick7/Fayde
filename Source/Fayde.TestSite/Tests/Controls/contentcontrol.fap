<Application
    xmlns="http://schemas.wsick.com/fayde"
    xmlns:x="http://schemas.wsick.com/fayde/x"
    xmlns:controls="Controls"
    Theme="/Fayde/Theme.Metro.xml">
    <Application.Resources>
        <DataTemplate TargetType="controls:TestClass">
            <StackPanel>
                <TextBlock Text="Name:" />
                <TextBlock Text="{Binding Name}" />
                <TextBlock Text="Age:" />
                <TextBlock Text="{Binding Age}" />
            </StackPanel>
        </DataTemplate>
    </Application.Resources>
    <Grid>
        <ContentControl>
            <ContentControl.Content>
                <controls:TestClass />
            </ContentControl.Content>
        </ContentControl>
    </Grid>
</Application> 