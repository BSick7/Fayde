<Application
    xmlns="http://schemas.wsick.com/fayde"
    xmlns:x="http://schemas.wsick.com/fayde/x"
    x:Type="Tests.IssueTests.Application"
    Theme="/Fayde/Theme.Metro.xml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ListBox ItemsSource="{Binding AllItems}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Orientation="Horizontal" Grid.Column="1" DataContext="{Binding SelectedItem}">
            <TextBlock Text="{Binding Data}" />
            <TextBlock Text=". " />
            <TextBlock Text="{Binding Name}" />
        </StackPanel>
    </Grid>
</Application>