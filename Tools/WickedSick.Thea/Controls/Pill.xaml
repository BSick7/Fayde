<UserControl x:Class="WickedSick.Thea.Controls.Pill"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="1" CornerRadius="5" BorderBrush="Black" BorderThickness="1" Background="Silver" Opacity=".7">
            <Border.Effect>
                <DropShadowEffect />
            </Border.Effect>
            <TextBlock Text="{Binding Start, StringFormat='{}{0} ms'}" HorizontalAlignment="Center" />
        </Border>
    </Grid>
</UserControl>