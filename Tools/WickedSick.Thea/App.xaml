<Application x:Class="WickedSick.Thea.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:res="clr-namespace:WickedSick.Thea.Resources"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <res:BoolVisibilityConverter x:Key="boolVisibilityConverter" />
        <res:BoolVisibilityConverter x:Key="notBoolVisibilityConverter" IsNegated="True" />
        <res:BoolFontWeightConverter x:Key="boolFontWeightConverter" />
        <res:BoolSolidColorBrushConverter x:Key="boolSolidColorBrushConverter" Color="Firebrick" />
    </Application.Resources>
</Application>